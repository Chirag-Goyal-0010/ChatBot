<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">AI Assistant</h1>
    <p class="text-gray-600">Ask questions about your scraped content</p>
  </div>

  <!-- Question Form -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <%= form_with url: answer_website_path, method: :post, local: true, class: "space-y-4" do |f| %>
      <div>
        <label for="question" class="block text-sm font-medium text-gray-700 mb-2">Your Question</label>
        <%= f.text_field :question, 
            value: @answer[:question], 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ask anything about the scraped content..." %>
      </div>
      <%= f.submit "Get AI Answer", 
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" %>
    <% end %>
  </div>

  <!-- AI Answer -->
  <% if @answer[:question].present? %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <div class="flex items-center mb-4">
        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">AI Answer</h2>
      </div>
      
      <div class="bg-gray-50 rounded-lg p-4 mb-4">
        <p class="text-gray-800 leading-relaxed"><%= @answer[:answer] %></p>
      </div>

      <!-- Sources -->
      <% if @answer[:chunks].any? %>
        <div class="border-t pt-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Sources</h3>
          <div class="space-y-3">
            <% @answer[:chunks].each_with_index do |chunk, index| %>
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex items-start">
                  <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2 py-1 rounded mr-3 mt-1">
                    Source <%= index + 1 %>
                  </span>
                  <div class="flex-1">
                    <p class="text-sm text-gray-700"><%= chunk.content %></p>
                    <% if chunk.section.present? %>
                      <p class="text-xs text-gray-500 mt-1">Section: <%= chunk.section %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Navigation -->
  <div class="flex justify-center space-x-4">
    <%= link_to "Back to Websites", websites_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
    <%= link_to "Submit New URL", new_website_path, 
        class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
  </div>
</div> 